<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    android:clickable="true"
    android:focusable="true"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/user_logo"
        android:layout_marginTop="30dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:background="@drawable/user"/>

    <EditText
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:textColor="@color/lightyellow"
        android:fontFamily="casual"
        android:singleLine="true"
        android:layout_below="@id/user_logo"
        android:hint="my name"
        android:inputType="textFilter"
        android:textAlignment="center"
        android:textColorHint="@color/yellow"
        android:textSize="26sp"
        android:gravity="center_horizontal" />

    <Button
        android:id="@+id/button_today"
        android:onClick="showTodaysData"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:background="@drawable/rounded_button"
        android:textColor="@color/darkyellow"
        android:fontFamily="casual"
        android:textAlignment="center"
        android:layout_below="@id/user_name"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="today's overview"/>

    <Button
        android:id="@+id/button_all"
        android:onClick="showAllData"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:background="@drawable/rounded_button"
        android:textColor="@color/darkyellow"
        android:fontFamily="casual"
        android:layout_marginTop="50dp"
        android:textAlignment="center"
        android:layout_below="@id/button_today"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="show everything"/>

    <Button
        android:id="@+id/button_choose_date"
        android:gravity="center"
        android:onClick="showDatePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rounded_button_yellow"
        android:layout_below="@id/button_all"
        android:layout_marginTop="50dp"
        android:padding="10dp"
        android:textSize="32sp"
        android:textColor="@color/white"
        android:fontFamily="casual"
        android:text="choose a date"/>

</RelativeLayout>