<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:background="@color/lightblue"
    android:paddingTop="24dp"
    android:paddingRight="24dp"
    android:paddingLeft="24dp"
    android:paddingBottom="12dp"
    tools:context=".TabFragments.MorningFragment2">

    <EditText
        android:id="@+id/editText_morning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:textColor="@color/darkblue"
        android:background="@drawable/rounded_edittext"
        android:textColorHint="@color/blue"
        android:fontFamily="casual"
        android:textSize="20sp"
        android:maxLines="3"
        android:autofillHints="true"
        android:gravity="center_horizontal"
        android:hint="how did you start your day?"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        tools:context=".TabFragments.MorningFragment2">

        <Spinner
            android:id="@+id/spinner_morning"
            android:background="@color/transparent"
            android:gravity="center_horizontal"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="50dp"/>

        <ImageButton
            android:id="@+id/btn_camera_morning"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/logo_photo"
            android:layout_gravity="center"
            android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp"/>

        <ImageButton
            android:id="@+id/btn_submit_morning"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/submit_logo"
            android:layout_gravity="center"
            android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp"/>

    </LinearLayout>

</RelativeLayout>